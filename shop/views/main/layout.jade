doctype 5
html(lang="en")
  head
    title #{store} | #{title}
    link(href="/css/bootstrap.min.css", rel="stylesheet")
    script(src='/js/modernizr.custom.js')
    //- link(href="/css/main.css", rel="stylesheet")
    //- link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet")
  body
    .navbar.navbar-static-top
        .navbar-inner
          .container
            <!-- -->
            ul.nav.nav--block.flush--bottom.nav--top
              //- li
              //-   a(href="/") Home
              //- li
              //-   a(href="/about") About
              //- li
              //-   a(href="/contact") Contact
              li 
                i.fa.fa-facebook.fa-lg.push--left.color-facebook
                i.fa.fa-twitter.fa-lg.push--left.color-twitter
                i.fa.fa-google-plus.fa-lg.push--left.color-google
              if (!locals.logged)
                li
                   a.push--left(data-toggle="modal", data-target="#modal", href="/modals/register") 
                   i.fa.fa-key &nbsp;Register
                li
                 a.md-trigger(data-modal='modal-1',href="#")
                    i.fa.fa-user
                    | &nbsp;Login 
              else
                li
                  a(href="/account/home") Account
                li       
                  a(href="/account/logout") Logout
    #modal-1.md-modal.md-effect-19
      .md-content
          h3 Login
          form(action="/account/login", method="post")
              fieldset
                .control-group.grid.grid-center
                  .grid__item.one-full.push--bottom
                    label(for="email").grid__item.one-quarter Email
                    input.text-input(type="text", name="email", placeholder="Email").grid__item.one-third
                  .grid__item.one-full
                    label(for="password").grid__item.one-quarter Password
                    input.text-input(type="password", name="password", placeholder="Password").grid__item.one-third
                .control-group.grid.grid-center.push--top
                  button.grid__item.one-quarter.btn.btn--small.btn--positive.push--sides(type="submit", value="submit") Log In
                  button.grid__item.one-quarter.btn.btn--small.md-close.push--sides(type="button") Close me!
    .md-overlay

            
    .container.grid
      a(href="/").grid__item.one-half
        img(src="/img/desicart.jpg")
        //- h1 DesiCart.com
      .grid__item.one-quarter
          ul.nav.nav--banner.nav--fit.push--top
            li Best Selling
            li Today's Hot Deal


      #cart.grid__item.one-quarter.push--top
              include ../cart/cart

      .navbar.grid
        .navbar-inner
          ul.nav.grid__item.three-quarters.nav--block.nav--cats
            each category in categories
              li
                a(href="/category/#{category.seo}") #{category.name}
          form.navbar-search.grid__item.one-quarter
            input.search-query(type="text", placeholder="Search",data-icon="search").search-input.push--right
            i.fa.fa-search.fa-lg.push--right
      .main.grid.grid__item.one-full
        hr.rule.rule--dotted.rule--light.flush


        block content
        hr.rule.rule--ornament.grid__item.one-full
      

      footer.grid
        .grid__item.one-quarter
          ul.nav.nav--stacked
            li 
              a(href="/about") About Us
            li 
              a(href="/contact") Customer Service
            li 
              a(href="#") Privacy Policy
            li 
              a(href="#") Return Policy

        .grid__item.one-half
          .grid
            .grid__item.one-quarter 1
            .grid__item.one-quarter 1
            .grid__item.one-quarter 1
            .grid__item.one-quarter 1


        .grid__item.one-quarter
          |Copyright @DesiCart.com

    script(src="http://code.jquery.com/jquery.min.js", type="text/javascript")
    script(src="/js/bootstrap.min.js", type="text/javascript")
    script(src="/js/controller/main.js")
    script(src='/js/classie.js')
    script(src='/js/modalEffects.js')


    block scripts